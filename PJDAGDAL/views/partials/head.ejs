  <style>
    /* Common site styles */
    body { font-family: Arial, sans-serif; direction: rtl; margin:0; padding:0; background:#f5f5f5; }
    header { background:#004aad; color:white; padding:20px; text-align:center; }
    nav { background:#ff6600; padding:10px; }
    nav a { color:white; margin:0 10px; text-decoration:none; font-weight:bold; }
    nav a:hover { text-decoration:underline; }
    main { padding:20px; }
    .container { max-width:1200px; margin:auto; }
    /* Auth pages use their own centered card styles; views can add page-specific CSS */
  /* Dashboard / card system */
  .dashboard { padding: 20px 0; }
  .page-title { margin: 0 0 12px 0; padding: 0 20px; }
  .card { background: #fff; border-radius: 8px; box-shadow: 0 6px 18px rgba(0,0,0,0.06); padding: 18px; margin-bottom: 16px; }
  .dashboard-grid { display: grid; grid-template-columns: repeat(auto-fit, minmax(260px, 1fr)); gap: 16px; }
  .card .card-header { font-size: 18px; color: #004aad; margin-bottom: 8px; font-weight:700 }
  .card .card-body { font-size: 14px; color: #333 }
  /* Tables inside cards */
  .card table { width: 100%; border-collapse: collapse; margin-top: 12px }
  .card table th, .card table td { padding: 8px 10px; border-bottom: 1px solid #eef0f3; text-align: right }
  .card table thead th { background: #f8f9fb; color: #333; font-weight:700 }
  /* Buttons */
  .btn { display:inline-block; padding:8px 12px; border-radius:6px; border:none; background:#004aad; color:#fff; cursor:pointer }
  .btn-add { background:#28a745 }
  .btn-edit { background:#ffc107; color:#000 }
  .btn-delete { background:#e74c3c }
  </style>
  <script>
    // Helper: safeFetchJson(url, opts)
    // Supports opts.responseType = 'blob' to return raw Blob in data.
    // Returns { ok, status, data, res }
    async function safeFetchJson(url, opts) {
      opts = opts || {};
      const responseType = opts.responseType || 'auto';
      const fetchOpts = Object.assign({}, opts);
      // remove internal option before passing to fetch
      if (fetchOpts.responseType) delete fetchOpts.responseType;

      const res = await fetch(url, fetchOpts);
      let data = null;

      if (responseType === 'blob') {
        try { data = await res.blob(); }
        catch (err) { data = null; }
        return { ok: res.ok, status: res.status, data, res };
      }

      const ct = res.headers.get('content-type') || '';
      if (ct.includes('application/json')) {
        try { data = await res.json(); }
        catch (err) {
          try { data = { message: await res.text() }; } catch (e) { data = { message: 'Invalid JSON response' }; }
        }
      } else {
        // try to parse text as JSON, otherwise return as message
        const text = await res.text();
        try { data = JSON.parse(text); }
        catch (err) { data = { message: text || 'Unknown response from server' }; }
      }
      return { ok: res.ok, status: res.status, data, res };
    }
  </script>
